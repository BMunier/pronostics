<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <changeSet id="2" author="squ" runAlways="true">
        <comment>Ajout des Ã©quipes</comment>
        <createTable tableName="pro_teams">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="pays" type="varchar(5)">
                <constraints nullable="false"/>
            </column>
            <column name="rang" type="integer"/>
            <column name="code" type="varchar(5)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <loadData encoding="UTF-8"
                  file="config/liquibase/teams.csv"
                  separator=";"
                  tableName="pro_teams"/>
    </changeSet>
</databaseChangeLog>